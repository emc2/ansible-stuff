# Third party modules
IncludeOptional etc/apache24/modules.d/[0-9][0-9][0-9]_*.conf

<IfModule unixd_module>
User {{ www_user }}
Group {{ www_user }}
</IfModule>

Listen 80
Listen 443

JkWorkersFile   {{ www_config_dir }}/workers.properties
JkShmFile       /var/run/mod_jk.shm
JkLogFile       /var/log/httpd-mod_jk.log
JkLogLevel      info
JkLogStampFormat "[%a %b %d %H:%M:%S %Y] "

ServerAdmin admin@{{ network_name }}

Include etc/apache24/Includes/*.conf

<Directory />
    AllowOverride None
    Order deny,allow
    Require all denied
    Deny from all
</Directory>

<Directory {{ www_virtual_host_dir }}/{{ network_name }}/>
    Options Indexes FollowSymLinks
    AllowOverride None
    Order allow,deny
    Require all granted
    Allow from all
</Directory>

<Files ".ht*">
    Require all denied
</Files>

<FilesMatch "^\.ht">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

<FilesMatch "\.phps$">
     SetHandler application/x-httpd-php-source
</FilesMatch>

<VirtualHost *:80>
  ServerAdmin admin@{{ network_name }}
  ServerName {{ ansible_fqdn }}
  ServerAlias {{ ansible_fqdn }}
  RewriteEngine On
  RewriteCond %{HTTPS} off
  RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
  DocumentRoot "{{ www_virtual_host_dir }}/{{ network_name }}/"
</VirtualHost>

